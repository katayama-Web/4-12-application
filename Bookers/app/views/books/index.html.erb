<h1>Books</h1>
<body>
<!--一覧表示部分-->
<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  <% end %>
<!--form_with部分-->
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <h4>title</h4>
      <%= f.text_field :title %>
      
      <h4>body</h4>
      <%= f.text_area :body %>
      
      <%= f.submit '投稿' %>
      <% end %>
</body>
    
